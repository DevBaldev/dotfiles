{
    "layer": "top",
    "position": "bottom",
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "mpris"
    ],
    "modules-right": [
        "tray",
        "memory",
        "wireplumber",
        "bluetooth",
        "network",
        "clock",
        "clock#simpleclock"
    ],
    "hyprland/workspaces": {
        "on-click": "activate",
        "format": "{icon}",
        "persistent-workspaces": {
            "*": 5
        },
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": ""
        },
        "tooltip": false
    },
    "mpris": {
        "dynamic-order": [
            "artist",
            "title"
        ],
        "max-length": 40,
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "status-icons": {
            "paused": ""
        },
        "player-icons": {
            "default": ""
        },
        "tooltip-format": "{artist} - {title}",
        "on-click-right": "ghostty --title=spotify -e ncspot"
    },
    "tray": {
        "icon-size": 14,
        "spacing": 8
    },
    "bluetooth": {
        "format": "",
        "format-disabled": "󰂲",
        "format-connected": "󰂱",
        "format-no-controller": "",
        "tooltip-format": "{num_connections} Connected",
        "tooltip-format-connected": "{num_connections} Connected\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}",
        "on-click": "uwsm app -- ghostty --title=bluetui -e bluetui"
    },
    "network": {
        "format-icons": [
            "󰤯",
            "󰤟",
            "󰤢",
            "󰤥",
            "󰤨"
        ],
        "format": "{icon}",
        "format-wifi": "{icon}",
        "format-ethernet": "󰀂",
        "format-disconnected": "󰤮",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-disconnected": "Disconnected",
        "interval": 3,
        "spacing": 1,
        "on-click": "uwsm app -- ghostty -e impala"
    },
    "wireplumber": {
        "format": "{icon}",
        "on-click": "uwsm app -- ghostty --title=wiremix -e wiremix",
        "on-click-right": "pamixer -t",
        "tooltip-format": "{volume}%",
        "scroll-step": 5,
        "format-muted": "",
        "format-icons": {
            "default": [
                "",
                "",
                ""
            ]
        }
    },
    "memory": {
        "interval": 10,
        "format": " {used}G",
        "on-click": "uwsm app -- ghostty --title=btop -e btop",
        "tooltip": true,
        "tooltip-format": "{percentage}% used"
    },
    "clock#simpleclock": {
        "tooltip": false,
        "format": "{:%H:%M}"
    },
    "clock": {
        "format": "{:%a %d.%m}",
        "calendar": {
            "format": {
                "days": "<span weight='normal'>{}</span>",
                "months": "<span color='#cdd6f4'><b>{}</b></span>",
                "today": "<span color='#f38ba8' weight='700'><u>{}</u></span>",
                "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
                "weeks": "<span color='#a6e3a1'><b>W{}</b></span>"
            },
            "mode": "month",
            "mode-mon-col": 1,
            "on-scroll": 1
        },
        "tooltip-format": "<span color='#cdd6f4' font='Lexend 14'><tt><small>{calendar}</small></tt></span>"
    }
}
